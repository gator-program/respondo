package:
    name: respondo
    version: @RESPONDO_VERSION@

source:
    path: ../

build:
    noarch: python
    number: 0
    script: "{{ PYTHON }} -m pip install . --no-deps -vv"

requirements:
    host:
        - python >=3.6
        - pip
    run:
        - python >=3.6
        - numpy >=1.14
        - adcc >=0.15.7
        - pandas >=0.25.0

test:
    requires:
        - pytest
    imports:
        - respondo
        - adcc
